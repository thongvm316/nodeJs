extends ../layout/common.pug

block content

	h1 Users
	a.btn.btn-success(href="/users/create") New
	form(action="/users/search", method="GET")
		input(type="text" name="q")
		button(type="button" class="btn btn-success ml-2") Search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Action

		each user in users
			tr
				td
					img(src=user.avatar, width="32")
				td= user.name
				td= user.phone
				td
					a.btn.btn-secondary(href='/users/' + user.id) View

