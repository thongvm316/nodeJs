extends ../layout/common.pug

block content

	h1 Users
	a.btn.btn-dark(href="/users/create") New
	form(action="/users/search", method="GET")
		input(type="text" name="q")
		button(type="button" class="btn btn-success") Search

	table.table
		tr
			th Name
			th Phone
			th Action
		each user in users
			tr
				td= user.name
				td= user.phone
				td
					a.btn.btn-light(href='/user/' + user.id) View
